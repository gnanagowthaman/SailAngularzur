{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "angular-app"
  },   
  "apps": [    
    {
      "root": "assets/app",
      "outDir": "assets/dist",
      "assets": [           
        "assets",
        "favicon.ico"   
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles.css"           
      ],   
      "scripts": [   
              
        "resources/js/jquery.min.js",
        "resources/js/jquery.minicolors.min.js",
        "resources/js/jquery.bootstrap-touchspin.min.js",
        "resources/js/jquery.easypiechart.min.js",
        "resources/js/jquery.mCustomScrollbar.concat.min.js",
        "resources/js/bootstrap.min.js",
        "resources/js/moment.min.js",
        "resources/js/bootstrap-datetimepicker.min.js",
        "resources/js/bootstrap-maxlength.js",
        "resources/js/buttons.bootstrap.min.js",
        "resources/js/buttons.html5.min.js",
        "resources/js/buttons.print.min.js",   
        "resources/js/jquery.dataTables.min.js",
        "resources/js/dataTables.buttons.min.js",
        "resources/js/dataTables.bootstrap.min.js",
        "resources/js/dataTables.colReorder.min.js",
        "resources/js/dataTables.responsive.min.js",
        "resources/js/daterangepicker.js",
        "resources/js/jszip.min.js",
        "resources/js/responsive.bootstrap.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {   
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}