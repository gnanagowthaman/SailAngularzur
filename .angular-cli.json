{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "angular-app"
  },   
  "apps": [    
    {
      "root": "assets/app",
      "outDir": "assets/dist",         
      "assets": [           
        "assets",      
        "favicon.ico"      
      ],
      "index": "index.html",
      "main": "main.ts",       
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",                              
      "styles": [                           
        "styles/ngx-bootstrap/datepicker/bs-datepicker.css",     
        "styles/css/bootstrap-progressbar-3.3.4.min.css",                         
        "styles/bootstrap-3.3.7/dist/css/bootstrap.min.css",  
        "styles/Ionicons/css/ionicons.min.css",   
        "styles/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.min.css", 
        "styles/animo.js/animate-animo.min.css",                                 
        "styles/flag-icon-css/css/flag-icon.min.css",
        "styles/jvectormap/jquery-jvectormap-2.0.3.css",
        "styles/SpinKit/css/spinners/2-double-bounce.css",           
        "styles/datatables.net-bs/css/dataTables.bootstrap.min.css",
        "styles/datatables.net-buttons-bs/css/buttons.bootstrap.min.css",
        "styles/datatables.net-colreorder-bs/css/colReorder.bootstrap.min.css",
        "styles/datatables.net-responsive-bs/css/responsive.bootstrap.min.css",
        "styles/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.css",
        "styles/bootstrap-daterangepicker/daterangepicker.css",            
        "styles/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css",
        "styles/Custom/first-layout.css"                       
      ],                     
      "scripts": [               
          "styles/jquery/dist/jquery.min.js",                          
          "styles/bootstrap-3.3.7/dist/js/bootstrap.min.js",        
          "styles/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js",
          "styles/animo.js/animo.min.js", 
          "styles/jquery.easy-pie-chart/dist/jquery.easypiechart.min.js",
          "styles/moment/min/moment.min.js",
          "styles/bootstrap-maxlength/src/bootstrap-maxlength.js",
          "styles/jquery-minicolors/jquery.minicolors.min.js",
          "styles/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.js",
          "styles/bootstrap-daterangepicker/daterangepicker.js",
          "styles/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js",
          "styles/datatables.net/js/jquery.dataTables.min.js",
          "styles/datatables.net-bs/js/dataTables.bootstrap.min.js",
          "styles/datatables.net-buttons/js/dataTables.buttons.min.js",
          "styles/datatables.net-buttons-bs/js/buttons.bootstrap.min.js",    
          "styles/jszip/dist/jszip.min.js",
          "styles/datatables.net-buttons/js/buttons.print.min.js",
          "styles/datatables.net-buttons/js/buttons.html5.min.js",
          "styles/datatables.net-colreorder/js/dataTables.colReorder.min.js",
          "styles/datatables.net-responsive/js/dataTables.responsive.min.js",
          "styles/datatables.net-responsive-bs/js/responsive.bootstrap.js"                  
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {   
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}